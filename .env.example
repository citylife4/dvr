# DVR connection settings
# Copy this to .env and adjust for your DVR
DVR_HOST=192.168.1.174
DVR_CMD_PORT=5050
DVR_MEDIA_PORT=6050
DVR_USERNAME=admin
DVR_PASSWORD=123456

# Web viewer port
DVR_WEB_PORT=8080

# Recording settings
# DVR_RECORD_ENABLED=false
# DVR_RECORD_CHANNELS=0
# DVR_RECORD_SEGMENT_MIN=15
# DVR_RECORD_STREAM_TYPE=1          # 1=main HD, 2=sub SD
# DVR_RECORD_RETENTION_HR=24        # 0=forever
# DVR_RECORD_SCHEDULE=0-23          # hour ranges, e.g. 8-17,22-6
# DVR_RECORD_DIR=/mnt/usb/recordings  # use USB/external storage
# DVR_RECORD_MIN_DISK_MB=500        # pause recording below this free space

# Google Drive upload (optional)
# DVR_GDRIVE_ENABLED=false
# DVR_GDRIVE_CREDENTIALS=           # path to service account JSON key
# DVR_GDRIVE_FOLDER_ID=             # Google Drive folder ID
# DVR_GDRIVE_DELETE_LOCAL=false      # delete local after upload

# Custom upload command (alternative to Google Drive)
# DVR_UPLOAD_COMMAND=rclone copy {file} gdrive:DVR/{channel}/