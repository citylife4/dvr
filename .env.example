# DVR connection settings
# Copy this to .env and adjust for your DVR
DVR_HOST=192.168.1.174
DVR_CMD_PORT=5050
DVR_MEDIA_PORT=6050
DVR_USERNAME=admin
DVR_PASSWORD=123456

# Web viewer port
DVR_WEB_PORT=8080

# ── Recording settings ──────────────────────────
# Set DVR_RECORD_ENABLED=true to start recording on launch
DVR_RECORD_ENABLED=false
DVR_RECORD_CHANNELS=0              # comma-separated: 0,1,2,3
DVR_RECORD_SEGMENT_MIN=15          # segment duration in minutes
DVR_RECORD_STREAM_TYPE=0           # 0=main (HD), 1=sub (SD)
DVR_RECORD_DIR=/opt/dvr/recordings # local storage path
DVR_RECORD_RETENTION_HR=24         # hours to keep local files (0=forever)
DVR_RECORD_SCHEDULE=0-23           # hour ranges: 0-23, 8-17, 22-6

# ── Google Drive upload (optional) ──────────────
# See hieasy_dvr/gdrive.py for setup instructions
DVR_GDRIVE_ENABLED=false
DVR_GDRIVE_CREDENTIALS=/opt/dvr/gdrive-credentials.json
DVR_GDRIVE_FOLDER_ID=              # folder ID from Drive URL
DVR_GDRIVE_DELETE_LOCAL=false      # delete local file after upload

# ── Custom upload command (alternative to Google Drive) ──
# Runs after each segment completes. Placeholders: {file} {channel} {filename}
# Example with rclone: rclone copy {file} gdrive:DVR/{channel}/
DVR_UPLOAD_COMMAND=
